<?xml version="1.0" encoding="ISO-8859-1" ?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">

<channel>
  <title><%= @channel_title %></title>
  <link><%= @channel_link %></link>
  <description><%= @channel_summary %></description>
  <%= lc item inlist @items do %>
  <%= if item != nil and item != [] do %>
  <item>
    <title>&lt;p&gt;<%= item[:title] %>&lt;/p&gt;</title>
    <link><%= item[:link] %></link>
    <description>
      &lt;p&gt;<%= item[:original_post] %>&lt;/p&gt;
      <%= lc client inlist item[:clients] do %>
        &lt;p&gt; open post in
        &lt;a href=&quot;<%= client[:link] %>&quot;&gt;<%= client[:name] %>&lt;/a&gt;
        &lt;/p&gt;
      <% end %>
      &lt;p&gt;<%= item[:summary] %>&lt;/p&gt;
    </description>
  </item>
  <% end %>
  <% end %>

</channel>

</rss>
